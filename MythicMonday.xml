<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/">
  <Frame name="MythicMondayContainer" enableMouse="true" movable="true">
    <Size x="700" y="500" />
    <Anchors>
      <Anchor point="CENTER"/>
    </Anchors>
    <!-- <Scripts>
      <OnLoad>
        self:RegisterForDrag("LeftButton")
      </OnLoad>
      <OnDragStart>
        if not self.isLocked then
            self:StartMoving()
        end
      </OnDragStart>
      <OnDragStop>
        self:StopMovingOrSizing()
      </OnDragStop>
    </Scripts> -->
    <Layers>
      <Layer level="BACKGROUND">
        <Texture setAllPoints="true">
          <Color r="0.1" g="0.1" b="0.1" a="1"/>
        </Texture>
      </Layer>
      <Layer level="BACKGROUND">
        <FontString name="projectVersion" inherits="GameFontNormal" text="@project-version@"
          justifyH="CENTER" justifyV="MIDDLE">
          <Color r="1" g="1" b="1" a="0.5"/>
          <FontHeight val="24"/>
          <Anchors>
            <Anchor point="BOTTOMRIGHT" relativeTo="$parent" x="-10" y="10" />
          </Anchors>
        </FontString>
      </Layer>
    </Layers>
    <Frames>
      <Button name="MythicMondayContainerCloseButton" parent="MythicMondayContainer">
        <Size x="20" y="20" />
        <Anchors>
          <Anchor point="TOPRIGHT" relativeTo="$parent">
            <Offset>
              <AbsDimension x="0" y="0" />
            </Offset>
          </Anchor>
        </Anchors>
        <NormalTexture file="Interface\Buttons\UI-Panel-MinimizeButton-Up">
          <Color r="1" g="1" b="1" />
        </NormalTexture>
        <PushedTexture file="Interface\Buttons\UI-Panel-MinimizeButton-Down">
          <Color r="1" g="1" b="1" />
        </PushedTexture>
        <HighlightTexture file="Interface\Buttons\UI-Panel-MinimizeButton-Highlight">
          <Color r="1" g="1" b="1" />
        </HighlightTexture>
        <Scripts>
            <OnClick>
                self:GetParent():Hide()
            </OnClick>
        </Scripts>
      </Button>
      <Frame name="MythicMondayContainerTitle" enableMouse="true">
        <Scripts>
          <OnLoad>
            self:RegisterForDrag("LeftButton")
          </OnLoad>
          <OnDragStart>
            _G["MythicMondayContainer"]:StartMoving()
          </OnDragStart>
          <OnDragStop>
            _G["MythicMondayContainer"]:StopMovingOrSizing()
          </OnDragStop>
        </Scripts>
        <Size x="700" y="40"/>
        <Anchors>
          <Anchor point="TOPLEFT" relativeTo="$parent">
            <Offset>
              <AbsDimension x="0" y="0" />
            </Offset>
          </Anchor>
        </Anchors>
        <Layers>
          <Layer level="BACKGROUND">
            <Texture setAllPoints="true">
              <Color r="0" g="0" b="0" a="1"/>
            </Texture>
          </Layer>
          <Layer level="OVERLAY">
            <FontString name="$parentTitle" inherits="GameFontNormal"
                text="Mythic Plus Family" justifyH="CENTER" justifyV="TOP">
              <Color r="1" g="1" b="1" a="1"/>
              <FontHeight val="24"/>
              <Anchors>
                <Anchor point="TOP" relativeTo="$parent" x="0" y="-10" />
              </Anchors>
            </FontString>
          </Layer>
        </Layers>
      </Frame>
      <Frame name="MythicMondayRosterContainer">
        <Size x="200" y="460" />
        <Anchors>
          <Anchor point="TOPLEFT">
            <Offset>
              <AbsDimension x="0" y="-40" />
            </Offset>
          </Anchor>
        </Anchors>
        <Layers>
          <Layer level="BACKGROUND">
            <Texture setAllPoints="true">
              <Color r="0" g="1" b="0" a="1"/>
            </Texture>
          </Layer>
        </Layers>
      </Frame>
      <Frame name="MythicMondayGroupsContainer">
        <Size x="500" y="460" />
        <Anchors>
          <Anchor point="BOTTOMRIGHT" relativeTo="$parent">
            <Offset>
              <AbsDimension x="0" y="0" />
            </Offset>
          </Anchor>
        </Anchors>
        <Layers>
          <Layer level="BACKGROUND">
            <Texture setAllPoints="true">
              <Color r="1" g="0" b="0" a="0.1"/>
            </Texture>
          </Layer>
        </Layers>
        <Frames>
          <Frame name="MythicMondayEmptyGroup">
            <Size x="500" y="40" />
            <Anchors>
              <Anchor point="BOTTOMRIGHT" relativeTo="$parent">
                <Offset>
                  <AbsDimension x="0" y="0" />
                </Offset>
              </Anchor>
            </Anchors>
            <Frames>
              <Button name="MythicMondayAddPlayer" parent="MythicMondayEmptyGroup">
                <Size x="20" y="20" />
                <Anchors>
                  <Anchor point="TOPRIGHT" relativeTo="$parent">
                    <Offset>
                      <AbsDimension x="0" y="0" />
                    </Offset>
                  </Anchor>
                </Anchors>
                <NormalTexture file="Interface\Buttons\UI-Panel-MinimizeButton-Up">
                  <Color r="1" g="1" b="1" />
                </NormalTexture>
                <Scripts>
                    <OnClick>
                        print(self:GetName())
                        MythicMonday.msg:SendMessage(MythicMonday:GetMythicKeystoneInfo())
                    </OnClick>
                </Scripts>
              </Button>
            </Frames>
            <Layers>
              <Layer level="BACKGROUND">
                <Texture setAllPoints="true">
                  <Color r="0" g="0" b="0" a=".1"/>
                </Texture>
              </Layer>
              <Layer level="DIALOG">
                <FontString name="$parentTitle" inherits="GameFontNormal"
                  text="Create a new group by dragging a player here" justifyH="CENTER" justifyV="TOP">
                <Color r="1" g="1" b="1" a="1"/>
                <FontHeight val="24"/>
                <Anchors>
                  <Anchor point="TOP" relativeTo="$parent" x="0" y="-10" />
                </Anchors>
              </FontString>
              </Layer>
            </Layers>
          </Frame>
        </Frames>
      </Frame>
    </Frames>
  </Frame>
  <Frame virtual="true" name="MythicMondayGroupTemplate">
    <Anchors>
      <Anchor point="CENTER"/>
    </Anchors>
    <Layers>
      <Layer level="BACKGROUND">
        <Texture setAllPoints="true">
          <Color r="0" g="0" b="0" a="1"/>
        </Texture>
      </Layer>
    </Layers>
  </Frame>

  <Frame virtual="true" name="MythicMondayPlayerTemplate" inherits="" enableMouse="true">
    <Scripts>
      <OnLoad>
        self:RegisterForDrag("LeftButton")
      </OnLoad>
      <OnDragStart>
        self:StartMoving()
      </OnDragStart>
      <OnDragStop>
        self:StopMovingOrSizing()
      </OnDragStop>
    </Scripts>
    <Layers>
      <Layer level="BACKGROUND">
        <Texture setAllPoints="true">
          <Color r="0" g="0" b="0" a="1"/>
        </Texture>
      </Layer>
      <Layer level="OVERLAY">
        <FontString name="$parentTitle" inherits="GameFontNormal"
            text="Player Frame" justifyH="CENTER" justifyV="TOP">
          <Color r="1" g="1" b="1" a="1"/>
          <FontHeight val="24"/>
          <Anchors>
            <Anchor point="TOP" relativeTo="$parent" x="0" y="-10" />
          </Anchors>
        </FontString>
      </Layer>
    </Layers>
  </Frame>
</Ui>