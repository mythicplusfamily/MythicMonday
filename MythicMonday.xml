<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/">
  <Frame name="MythicMondayContainer" enableMouse="true" movable="true">
    <Size x="700" y="600" />
    <Anchors>
      <Anchor point="CENTER"/>
    </Anchors>
    <Scripts>
      <OnLoad>
        self:RegisterForDrag("LeftButton")
      </OnLoad>
      <OnDragStart>
        if not self.isLocked then
            self:StartMoving()
        end
      </OnDragStart>
      <OnDragStop>
        self:StopMovingOrSizing()
      </OnDragStop>
    </Scripts>
    <Layers>
      <Layer level="BACKGROUND">
        <Texture parentKey="bg" setAllPoints="true">
          <Color r="0.1" g="0.1" b="0.1" a="1"/>
        </Texture>
      </Layer>
      <Layer level="BACKGROUND">
        <FontString name="projectVersion" inherits="GameFontNormal" text="@project-version@"
          justifyH="CENTER" justifyV="MIDDLE">
          <Color r="1" g="1" b="1" a="0.5"/>
          <FontHeight val="24"/>
          <Anchors>
            <Anchor point="BOTTOMRIGHT" relativeTo="$parent" x="-10" y="10" />
          </Anchors>
        </FontString>
      </Layer>
    </Layers>
    <Frames>
      <Frame name="MythicMondayContainerTitle">
        <Size x="500" y="40"/>
        <Anchors>
          <Anchor point="TOP" relativeTo="$parent">
            <Offset>
              <AbsDimension x="0" y="0" />
            </Offset>
          </Anchor>
          <Anchor point="left" relativeTo="$parent">
            <Offset>
              <AbsDimension x="200" y="0" />
            </Offset>
          </Anchor>
        </Anchors>
        <Layers>
          <Layer level="BACKGROUND">
            <Texture parentKey="bg" setAllPoints="true">
              <Color r="0" g="0" b="0" a="0"/>
            </Texture>
          </Layer>
          <Layer level="OVERLAY">
              <FontString name="$parentTitle" inherits="GameFontNormal"
                text="Mythic Plus Family" justifyH="CENTER" justifyV="TOP">
              <Color r="1" g="1" b="1" a="1"/>
              <FontHeight val="24"/>
              <Anchors>
                <Anchor point="TOP" relativeTo="$parent" x="0" y="-10" />
              </Anchors>
            </FontString>
          </Layer>
        </Layers>
      </Frame>
      <Frame  name="MythicMondayRosterContainer">
        <Size x="200" y="600" />
        <Anchors>
          <Anchor point="TOPLEFT">
            <Offset>
              <AbsDimension x="0" y="0" />
            </Offset>
          </Anchor>
        </Anchors>
        <Layers>
          <Layer level="BACKGROUND">
            <Texture parentKey="bg" setAllPoints="true">
              <Color r="0" g="0" b="0" a="1"/>
            </Texture>
          </Layer>
        </Layers>
      </Frame>
      <Frame name="MythicMondayGroupsContainer">
        <Size x="500" y="400" />
        <Anchors>
          <Anchor point="BOTTOMRIGHT" relativeTo="$parent">
            <Offset>
              <AbsDimension x="0" y="0" />
            </Offset>
          </Anchor>
        </Anchors>
        <Layers>
          <Layer level="BACKGROUND">
            <Texture parentKey="bg" setAllPoints="true">
              <Color r="0" g="0" b="0" a="0.5"/>
            </Texture>
          </Layer>
        </Layers>
        <Frames>

        </Frames>
      </Frame>
    </Frames>
  </Frame>
  <Frame virtual="true" name="MythicMondayGroupTemplate">
    <Anchors>
      <Anchor point="CENTER"/>
    </Anchors>
    <Layers>
      <Layer level="BACKGROUND">
        <Texture parentKey="bg" setAllPoints="true">
          <Color r="0" g="0" b="0" a="1"/>
        </Texture>
      </Layer>
    </Layers>
  </Frame>

  <Frame virtual="true" name="MythicMondayPlayerTemplate" inherits="">
