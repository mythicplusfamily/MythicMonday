<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/">
  <Frame virtual="true" name="MythicMondayContainerTemplate">
    <Size x="900" y="600" />
    <Anchors>
      <Anchor point="CENTER"/>
    </Anchors>
    <Layers>
      <Layer level="BACKGROUND">
        <Texture parentKey="bg" setAllPoints="true">
          <Color r="0" g="0" b="0" a="0.75"/>
        </Texture>
      </Layer>
    </Layers>
  </Frame>
  <Frame name="MythicMondayContainerTitleTemplate" virtual="true">
    <Size x="900" y="100"/>
    <Layers>
        <Layer>
            <FontString name="$parentTitle" 
              text="Mythic Plus Family" justifyH="CENTER" justifyV="TOP">
            <Color r="1" g="0.8" b="1" a="1"/>
            <FontHeight val="12"/>
            <Anchors>
            <Anchor point="TOP" relativeTo="$parent" x="0" y="-20" />
            </Anchors>
            <!-- <Shadow>
              <Offset x="1" y="1" />
              <Color r="0" g="0" b="0"/>
            </Shadow> -->
          </FontString>
        </Layer>
    </Layers>
  </Frame>
  <Frame virtual="true" name="MythicMondayRosterContainerTemplate">
    <Size x="200" y="600" />
    <Anchors>
      <Anchor point="LEFT">
        <Offset>
          <AbsDimension x="-200" y="00" />
        </Offset>
      </Anchor>
    </Anchors>
    <Layers>
      <Layer level="BACKGROUND">
        <Texture parentKey="bg" setAllPoints="true">
          <Color r="0" g="0" b="0" a=".5"/>
        </Texture>
      </Layer>
    </Layers>
  </Frame>
  <Frame virtual="true" name="MythicMondayGroupsContainerTemplate">
    <Size x="900" y="400" />
    <Anchors>
      <Anchor point="BOTTOM">
        <Offset>
          <AbsDimension x="0" y="10" />
        </Offset>
      </Anchor>
    </Anchors>
    <Layers>
      <Layer level="BACKGROUND">
        <Texture parentKey="bg" setAllPoints="true">
          <Color r="0" g="0" b="0" a="0"/>
        </Texture>
      </Layer>
    </Layers>
  </Frame>
  <Frame virtual="true" name="MythicMondayGroupTemplate">
    <Anchors>
      <Anchor point="CENTER"/>
    </Anchors>
    <Layers>
      <Layer level="BACKGROUND">
        <Texture parentKey="bg" setAllPoints="true">
          <Color r="0" g="0" b="0" a="0.25"/>
        </Texture>
      </Layer>
    </Layers>
  </Frame>
  <Frame virtual="true" name="MythicMondayPlayerTemplate">
    <Layers>
      <Layer level="BACKGROUND">
        <Texture parentKey="bg" setAllPoints="true">
          <Color r="0" g="0" b="0" a="0.5"/>
        </Texture>
      </Layer>
    </Layers>
  </Frame>
</Ui>